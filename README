// chatgpt spiring

var mainScene = new Phaser.Scene({
    preload: function () {
        // Load the sprite image
        this.load.image('sprite', 'assets/sprite.png');
    },
    create: function () {
        // Add the sprite to the scene
        this.sprite = this.add.sprite(400, 300, 'sprite');
        this.sprite.setOrigin(0.5, 0.5);

        // Add the event listener for the "Enter" key
        this.input.keyboard.on('keydown_ENTER', function (event) {
            // Start the rotation tween
            this.tweens.add({
                targets: this.sprite,
                angle: 360,
                duration: 1000,
                ease: 'Cubic.easeOut',
                loop: -1
            });
        }, this);
    }
});
